# Используем за основу Node.js образ
FROM node:14

# Установка рабочей директории внутри контейнера
WORKDIR /usr/src/app

# Копируем зависимости и исходный код приложения в контейнер
COPY package*.json ./
COPY . .

# Установка зависимостей
RUN npm install

RUN chmod +x gen_ca.sh

RUN ./gen_ca.sh

# Открытие портов, через которые будет доступно приложение
EXPOSE 8080

# Команда для запуска приложения
CMD ["node", "proxy.js"]